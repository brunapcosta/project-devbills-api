{
  "compilerOptions": {
    "target": "ES2021",                              
    "module": "commonjs",                            
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                  
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./src"                             
  },
  "include": ["src/**/*.ts", "eslint.config.cjs"],
  "exclude": ["build", "node_modules"]
}
